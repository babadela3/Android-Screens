<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.teo.unde.MainActivity">


     <LinearLayout
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:background="@drawable/background">

         <FrameLayout
             android:layout_width="20dp"
             android:layout_height="match_parent">

             <ImageView
                 android:layout_width="15dp"
                 android:layout_height="20dp"
                 android:id="@+id/imageView"
                 android:src="@drawable/location"
                 android:layout_gravity="top" />
         </FrameLayout>

         <LinearLayout
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Location Adress:"
                 android:textStyle="bold"
                 android:id="@+id/textView" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="45 Howard Street,CA,United States"
                 android:id="@+id/textView2" />
         </LinearLayout>
     </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jazz night from 11:30"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance:"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 km"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView6" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fee Entrance"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$10"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView8" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservation"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 88 555"
                android:layout_marginLeft="20dp"
                android:id="@+id/textView10" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/pub"></FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="By foot"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView11" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="2 h"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView12" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/location"></FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/background">

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="By car"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView13" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="30 min"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView14" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/location"></FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/map"></FrameLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="RESERVE NOW!"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/button"
        android:background="#ff6f00"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

